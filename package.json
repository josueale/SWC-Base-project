{
  "name": "swc-ts-base",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "swc src -w --out-dir build",
    "watch-dev": "nodemon --watch \"build/**/*\" -e js ./build/index.js",
    "build": "swc src -d build",
    "start": "node build/index.js NODE_ENV=production",
    "clean": "rm -rf build"
  },
  "keywords": [
    "Node",
    "TypeScript",
    "SWC"
  ],
  "author": "josueale",
  "license": "",
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.1",
    "@types/express": "^4.17.14",
    "@types/node": "^18.7.18",
    "concurrently": "^7.4.0",
    "nodemon": "^2.0.19",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "express": "^4.18.1"
  }
}